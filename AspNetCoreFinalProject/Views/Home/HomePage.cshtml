@model IEnumerable<AspNetCoreFinalProject.Models.Animal>

<div class="py-5 bg-light">
    <div class="container">
        <h2>Top animals</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">Number of comments: @Model.First().Comments.Count()
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="20">
                        <div class="card-body">
                            <img src="@Model.First().Picturename"/>
                            <p class="card-text">@Model.First().Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Animal" asp-route-id=@Model.First().Id class="btn btn-sm btn-outline-secondary">View detalis</a>
                                </div>
                                <small class="text-muted">@Model.First().Name</small>
                            </div>
                        </div>
                    </svg>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">Number of comments: @Model.Last().Comments.Count()
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="20">
                        <div class="card-body">
                            <img src="@Model.Last().Picturename"/>
                            <p class="card-text">@Model.Last().Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Animal" asp-route-id=@Model.Last().Id class="btn btn-sm btn-outline-secondary">View detalis</a>
                                </div>
                                <small class="text-muted">@Model.Last().Name</small>
                            </div>
                        </div>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>




